<!doctype html>
<html>
<head>
    <title>Discord Admin Tool</title>

    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">

    <link href="../static/css/main.css" rel="stylesheet" />
    <link href="../static/css/style.css" rel="stylesheet" />
</head>
<body>
    <div class="container">

        <%- include("./topnavbar.ejs") %>

        <div class="page-header text-center">
            <h1>All servers</h1>
            <% if (servers.length == 0) { %>
            <strong>No servers found! (You might not have permission to view them.)</strong><br>
            <% } %>
        </div>

        <% for (var i=0; i < servers.length; i++) { %>
            <div class="row">
                <!-- Server info -->
                <div class="col-sm-6">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="well">
                                <h3><span class="fa fa-desktop"></span> <%= servers[i].guildName %></h3>

                                <p>
                                    <strong>id</strong>: <%= servers[i].guildId %><br>
                                </p>

                            </div>
                        </div>
                    </div>
                </div>

                <!-- User info -->
                <div class="col-sm-6">
                    <div class="well">
                        <h3 class="text-primary"><span class="fa fa-gears"></span>Users: </h3>
                        <p>
                            <% for (var j=0; j < servers[i].users.length; j++) { %>
                                <strong><%= servers[i].users[j].name %> [<%= servers[i].users[j].level %>]</strong> (<%= servers[i].users[j].id %>)<br>
                            <% } %>
                        </p>
                    </div>
                </div>
            </div>
        <% } %>
    </div>
    <script src="../static/js/adminajaxhandler.js"></script>
</body>
</html>